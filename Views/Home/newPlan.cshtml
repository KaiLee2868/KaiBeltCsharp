<h1>Create a Meet up</h1>

@model Meet
 <form action ="/plan" method="post">
        <div class= "form-group">
        <span asp-validation-for="Title" class="text-danger"></span>
        <label  asp-for="Title"></label>
        <input class = "form-control" asp-for="Title">
        </div>
        <div class= "form-group">
        <span asp-validation-for="DateandTime" class="text-danger"></span>
        <label  asp-for="DateandTime"></label>
        <input class = "form-control" asp-for="DateandTime">
        </div>
        <div class="form-group">
        <span asp-validation-for="Duration" class="text-danger"></span>
        <label asp-for="Duration"></label>
        <input type="number" class = "form-control" asp-for="Duration">
        <select asp-for="DurationStyle">
            <option value="Days">Days</option>
            <option value="Hours">Hours</option>
            <option value="Minutes">Minutes</option>
        </select>
        </div>
        <div class="form-group">
        <span asp-validation-for="Description" class="text-danger"></span>
        <label asp-for="Description"></label>
        <textarea class = "form-control" asp-for="Description"></textarea>
        </div>
        
        <input type="submit" value="Create Meet Up" class="btn btn-success">
        
      
    </form>